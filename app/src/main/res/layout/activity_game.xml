<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="20dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.umarajipratama.numbersgame.GameActivity">

    <Button
        android:id="@+id/b_plus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="+"
        android:background="@color/colorButton"
        android:textSize="30dp"
        android:textColor="@color/colorCek"
        android:layout_above="@+id/tv_number"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:id="@+id/tv_number"
        android:textColor="@color/colorText"
        android:textSize="50dp"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/b_minus"
        android:layout_alignStart="@+id/b_minus" />

    <Button
        android:id="@+id/b_minus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="-"
        android:background="@color/colorButton"
        android:textSize="30dp"
        android:textColor="@color/colorCek"
        android:layout_below="@+id/tv_number"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/text_guess"
        android:textColor="@color/colorText"
        android:textSize="32dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_check"
        android:fontFamily="sans-serif-light"
        android:id="@+id/b_check"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorButton"
        android:textSize="30dp"
        android:textColor="@color/colorCek"/>
</RelativeLayout>
